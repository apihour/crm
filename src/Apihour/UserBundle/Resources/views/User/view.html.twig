{% extends layoutResolver().resolve() %}

{% block content %}
{% set person = userAccount.getPerson() %}
<div class="row">
    <div class="col-sm-5 col-md-4">
        <div class="user-left">
            <div class="center">
                <h4>{{ person.getFirstname()~' '~person.getLastname() }}</h4>
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <div class="user-image">
                        <div class="fileupload-new thumbnail">
                            {% if person.getAvatar() != null %}
                                {% set image_uri = file_image(person.getAvatar().getUri('', '_xl')) %}
                            {% else %}
                                {% set image_uri = '/images/anonymous.jpg' %}
                            {% endif %}
                            <img src="{{ image_uri }}" alt="">
                        </div>
                    </div>
                </div>
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th colspan="3">{{ "user.contact_information"|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ "www"|trans }}</td>
                        <td>{{ person.getWww() }}</td>
                        <td><a href="#panel_edit_account" class="show-tab"><i class="fa fa-pencil edit-user-info"></i></a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock content %}